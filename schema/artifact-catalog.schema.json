{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://artifact-hub.dev/schema/v1/catalog.schema.json",
  "title": "Artifact Hub Catalog",
  "description": "Schema for artifact catalog supporting chatmodes, prompts, instructions, and tasks",
  "type": "object",
  "required": ["version", "catalog", "artifacts"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "catalog": {
      "type": "object",
      "required": ["id", "name", "description", "author", "repository", "license"],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "author": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "repository": {
          "type": "object",
          "required": ["type", "url", "branch"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["git", "github", "gitlab"]
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "branch": {
              "type": "string"
            }
          }
        },
        "license": {
          "type": "string"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "name", "description", "path", "version", "category", "tags"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["chatmode", "prompt", "instructions", "task"]
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "category": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "author": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          },
          "supportingFiles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    }
  }
}
